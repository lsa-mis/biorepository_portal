<div class="d-flex justify-content-between align-items-center">
  <h1>Loan Questions and Answers</h1>
  <div class="d-flex align-items-end flex-column gap-1 mt-2">
    <%= link_to "Back to Profile", profile_path(current_user), class: "link_to" %>
    <%= link_to "Edit Loan Questions", loan_questions_profile_path, class: "btn btn-primary" %>
  </div>
</div>
<% if @loan_answers.present? %>
  <% @loan_answers.each do |answer| %>
    <p>
      <strong><%= answer.loan_question.question %></strong>
        <% if answer.loan_question.required? %>
        <span class="text-danger">*</span>
      <% end %>
    </p>
    <p>
      <%= answer.present? ? answer.answer : "No answer provided" %>
    </p>
  <% end %>
<% end %>
