<h2 class="mb-3 text-center">Shipping Information</h2>

<% if addresses.any? %>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4" data-controller="address-selection">
    <% addresses.each do |address| %>
      <div class="col">
        <label for="shipment_<%= address.id %>" class="card h-100 shadow-sm address-card <%= 'border-primary' if address.primary %>">
          <div class="card-body <%= 'bg-light border border-primary' if address.primary %>">
            <% if address.primary %>
              <span class="badge bg-primary mb-2">Primary</span>
            <% end %>
            <h5 class="card-title"><%= "#{address.first_name} #{address.last_name}" %></h5>
            <p class="card-text mb-1"><%= address.street %></p>
            <% if address.address_line_2.present? %>
              <p class="card-text mb-1"><%= address.address_line_2 %></p>
            <% end %>
            <p class="card-text mb-1"><%= "#{address.city}, #{address.state} #{address.zip}" %></p>
            <p class="card-text mb-1"><%= address.country %></p>
            <p class="card-text mb-1"><%= address.email %></p>
            <p class="card-text text-muted"><i class="bi bi-telephone"></i> <%= address.phone %></p>
          </div>
          <div class="card-footer d-flex justify-content-between align-items-center px-3">
            <%= radio_button_tag :shipping_address_id, address.id, address.primary, 
                id: "shipment_#{address.id}", 
                class: "form-check-input shipping-radio me-2",
                data: { 
                  address_selection_target: "radio",
                  action: "change->address-selection#change" 
                } %>
            <label for="shipment_<%= address.id %>" class="form-check-label mb-0">Ship to this address</label>

            <%= link_to "Edit", edit_address_path(address), class: "btn btn-sm btn-outline-secondary ms-auto" %>
          </div>
        </label>
      </div>
    <% end %>
  </div>
  <% unless addresses.find_by(primary: true) %>
    <div class="alert alert-warning text-center mt-3">
      <span class="text-danger">Warning: Select an address to ship to.</span>
    </div>
  <% end %>
  <div class="text-center mt-3">
    <%= link_to "Ship to a New Address", new_address_path(ship_to_new_address: true), class: "btn btn-outline-primary" %>
  </div>
<% else %>
  <div class="alert alert-warning text-center mt-3">
    No addresses available. 
    <span class="text-danger">Warning: Shipping address is required.</span>
    Please <%= link_to "add a new one", new_address_path %> first.
  </div>
<% end %>
