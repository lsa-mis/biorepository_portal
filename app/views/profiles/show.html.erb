<div class="container-fluid mt-4">
  <div class="row">
    <!-- Profile summary: Displayed on all screens, order changes based on viewport size -->
    <div class="col-12 col-md-3 order-1">
      <%= render 'summary' %>
    </div>

    <!-- Main content -->
    <div class="col-12 col-md-9 mt-4 order-2">
      <div class="row">
        <div class="col-12 submissions-summary" id="submissions-summary">
          <h2>Submitted Loan Requests</h2>
          <%= render 'loan_requests/submitted_requests' %>
        </div>
        <div class="col-12 submissions-summary" id="submissions-history">
          <h2>Submitted Information Requests</h2>
          <%= render 'information_requests/submitted' %>
      </div>
    </div>
  </div>
