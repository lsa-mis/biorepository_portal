<h2>User Loan Answers</h2>
<% if @loan_answers.present? %>
  <% @loan_answers.each do |answer| %>
    <div id="loan_answer_<%= answer.id %>" class="border rounded p-3 mb-3">
      <p><strong><%= answer.loan_question.question %>:</strong></p>
      <p><%= answer.answer.to_plain_text.strip.presence || "No answer provided" %></p>

      <%= link_to "Edit",
                  edit_loan_answer_path(answer.loan_question, format: :turbo_stream),
                  data: {
                    turbo_frame: "modal_content_frame",
                    bs_toggle: "modal",
                    bs_target: "#editLoanAnswerModal"
                  },
                  class: "btn btn-sm btn-outline-primary" %>
    </div>
  <% end %>
<% else %>
  <p>No loan answers provided.</p>
<% end %>