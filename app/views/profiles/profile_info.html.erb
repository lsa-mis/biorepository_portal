<div class="d-flex justify-content-between align-items-center">
  <h1>Profile Information</h1>
  <div class="d-flex align-items-end flex-column gap-1 mt-2">
    <%= link_to "Back to Profile", profile_path(current_user), class: "link_to" %>
    <%= link_to "Edit Profile Info", edit_profile_path, class: 'btn btn-primary h-50 mt-auto mb-auto' %>
  </div>
</div>
<div>
  <div class="mt-3">
    <p>
      <strong>First Name <span class="text-danger">*</span>:</strong> 
      <%= @user.first_name %>
    </p>

    <p>
      <strong>Last Name <span class="text-danger">*</span>:</strong> 
      <%= @user.last_name %>
    </p>

    <p>
      <strong>Affiliation <span class="text-danger">*</span>:</strong> 
      <%= @user.affiliation %>
    </p>

    <p>
      <strong>Orcid</strong> 
      <%= @user.orcid %>
    </p>
  </div>
</div>
