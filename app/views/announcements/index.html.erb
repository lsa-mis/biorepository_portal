<h1>Manage Announcements</h1>
<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Location</th>
        <th>Displayed?</th>
        <th>Actions</th>
        <th>Preview</th>
      </tr>
    </thead>
    <tbody>
      <% @announcements.each do |announcement| %>
        <tr>
          <td><%= announcement.location.humanize %></td>
          <td><%= announcement.displayed? ? "Yes" : "No" %></td>
          <td><%= link_to "Edit", edit_announcement_path(announcement) %></td>
          <td>
            <% case announcement.location %>
            <% when "about" %>
              <%= button_to "Preview", preview_about_access_path, method: :post, class: "btn btn-link" %>
            <% when "app_preferences" %>
              <%= link_to "Preview", app_prefs_path(preview: true), class: "btn btn-link" %>
            <% when "checkout" %>
              <%= button_to "Preview", preview_checkout_access_path, method: :post, class: "btn btn-link" %>
            <% when "collections_index" %>
              <%= button_to "Preview", preview_collections_access_path, method: :post, class: "btn btn-link" %>
            <% when "faq" %>
              <%= button_to "Preview", preview_faqs_access_path, method: :post, class: "btn btn-link" %>
            <% when "loan_questions" %>
              <%= button_to "Preview", preview_loan_questions_access_path, method: :post, class: "btn btn-link" %>
            <% when "loan_request" %>
              <%= link_to "Preview", new_loan_request_path(preview: true), class: "btn btn-link" %>
            <% when "information_request" %>
              <%= link_to "Preview", new_information_request_path(preview: true), class: "btn btn-link" %>
            <% when "collection_questions" %>
              <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#collectionQuestionModal">
                Preview
              </button>
            <% when "collection_show" %>
              <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#collectionShowModal">
                Preview
              </button>
            <% else %>
              N/A
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Modals -->
<!-- Collection Question Modal -->
<div class="modal fade" id="collectionQuestionModal" tabindex="-1" aria-labelledby="collectionQuestionModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <p class="modal-title fs-5 fw-bold" id="collectionQuestionModalLabel">Collection Question Preview</p>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Go to <strong>"Explore Collection"</strong>, click on any collection, and then click the green button <strong>"Collection-Specific Loan Question"</strong> to view the collection question announcement.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Collection Show Modal -->
<div class="modal fade" id="collectionShowModal" tabindex="-1" aria-labelledby="collectionShowModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <p class="modal-title fs-5 fw-bold" id="collectionShowModalLabel">Collection Show Preview</p>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Go to <strong>"Explore Collection"</strong> and click on any collection to view the collection show announcement.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
