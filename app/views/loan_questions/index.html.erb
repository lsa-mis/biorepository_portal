<div class="container-fluid">
  <h1 class="mb-3 text-center">Loan Questions</h1>

  <div class="mt-4 text-end">
    <% if is_admin? %>
      <%= link_to preview_loan_questions_path, class: "btn btn-outline-success me-2 shadow-sm" do %>
        <i class="bi bi-eye me-2"></i> Preview Loan Questions
      <% end %>
      <%= link_to "New Loan Question", new_loan_question_path, class: "btn btn-success" if is_super_admin? %>
    <% end %>
  </div>
  
  <%= render 'loan_questions_list' %>
</div>
