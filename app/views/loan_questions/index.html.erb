<div class="mx-5 mx-lg-9">
  <% is_preview = params[:preview].present? %>
  <%= render "layouts/announcement", is_preview: is_preview, location: "loan_questions" %>
  <div class="md:d-flex justify-content-between align-items-center mb-3">
    <h1>Loan Questions</h1>

    <div class="mt-4 text-end">
      <% if is_admin? %>
        <%= link_to preview_loan_questions_path, class: "btn btn-outline-success shadow-sm" do %>
          <i class="bi bi-eye me-2"></i> Preview Loan Questions
        <% end %>
      <% end %>
        <%= link_to "New Loan Question", new_loan_question_path, class: "btn btn-primary mt-2 mt-md-0" if is_super_admin? %>
    </div>
  </div>
    
    <%= render 'loan_questions_list' %>
  </div>
</div>
