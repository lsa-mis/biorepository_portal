<%= form_with(model: loan_question, data: {controller: "edit-options"}) do |form| %>
  <% if loan_question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(loan_question.errors.count, "error") %> prohibited this loan_question from being saved:</h2>

      <ul>
        <% loan_question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :question, class: "form-label" %>
    <%= form.text_field :question, required: true, class: "input_text_field"  %>
  </div>

  <div>
    <%= form.label :question_type, class: "form-label" %>
    <%= form.select :question_type, @question_types, { include_blank: "Select ...", required: true }, { class: "input_text_field", "data-edit-options-target": "question_type", :"data-action" => "change->edit-options#showOptions" } %>
  </div>

  <%= turbo_frame_tag("new_option") do %>
    <div class="invisible" data-edit-options-target="show_options">
      <div id="options" data-edit-options-target="fields"></div>
        <div class="option-list-item">
            <div class="mx-3">
              <label data-edit-options-target="option_label"></label>
              <%= form.text_field :value, required: true, class: "input_text_field", "data-edit-options-target": "option_value" %>
            </div>
          <div class="">
            <button
                type="button"
                title="Remove option"
                class="remove-option-button mt-4"
                data-action="click->edit-options#removeOption">
              <i class="bi bi-trash-fill text-danger"></i>
            </button>
          </div>
          <input data-edit-options-target="option_number" autocomplete="off" type="hidden"/>
        </div>

        <div>
          <%= turbo_frame_tag("new_option") do %>
            <%= button_tag "Add Option", type: :button, class: "btn btn-sm", data: {action: "edit-options#append"} %>
          <% end %>
        </div>

        <template data-edit-options-target="template">
          <div class="option-list-item">
              <div class="mx-3">
                <label data-edit-options-target="option_label"></label>
                <%= form.text_field :value, required: true, class: "input_text_field", "data-edit-options-target": "option_value" %>
              </div>
            <div class="">
              <button
                  type="button"
                  title="Remove option"
                  class="remove-option-button mt-4"
                  data-action="click->edit-options#removeOption">
                <i class="bi bi-trash-fill text-danger"></i>
              </button>
            </div>
            <input data-edit-options-target="option_number" autocomplete="off" type="hidden"/>
          </div>
        </template>

    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
