<tr id="<%= dom_id(loan_question) %>">
  <td class="text-start align-middle">
      <div class="d-flex gap-1 justify-content-start align-items-center">
      <%= button_to "Up", move_up_loan_question_path(loan_question), method: :patch, class: "btn btn-sm btn-outline-secondary me-1" %>
      <%= button_to "Down", move_down_loan_question_path(loan_question), method: :patch, class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </td>
  <td class="text-start align-middle"><%= loan_question.position %></td>
  <td class="text-start align-middle"><%= loan_question.question %></td>
  <td class="text-start align-middle"><%= loan_question.question_type %></td>
  <td class="text-start align-middle"><%= show_boolean(loan_question.required) %></td>
  <td class="text-start align-middle">
    <%= link_to loan_question_path(loan_question), 'aria-label': "view_#{loan_question.id}", data: { turbo_frame: "_top" } do %>
      <i class="bi bi-eye-fill text-primary"></i>
    <% end %>
  </td>
  <td class="text-start align-middle">
    <%= link_to edit_loan_question_path(loan_question), 'aria-label': "edit_#{loan_question.id}", data: { turbo_frame: "_top" } do %>
      <i class="bi bi-pencil-square text-primary"></i>
    <% end %>
  </td>
  <td class="text-start align-middle">
    <%= link_to loan_question_path(loan_question), 'aria-label': "delete_#{loan_question.id}", data: { turbo_confirm: "Are you sure you want to delete loan question?" , turbo_method: :delete } do %>
      <i class="bi bi-trash-fill text-danger"></i>
    <% end %>
  </td>
</tr>
