<div class="card h-100 shadow-sm" id="<%= dom_id item %>">
  <div class="card-header">
    <%= link_to item.display_name, item_path(item), class: "link_to", data: { turbo_frame: "_top" }  %>
  </div>
  <div class="card-body">
    <p>
      <%= item.country %>
    </p>
    <p>
      <%= item.state_province %>
    </p>
  </div>
</div>
