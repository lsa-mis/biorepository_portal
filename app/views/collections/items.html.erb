<div class="container my-5">
  <h1><%= @collection.division %> items</h1>
  <%= turbo_frame_tag "all_items" do %>
    <%= form_with url: collection_items_path(@collection), method: :get, local: true, 
      data: { controller: "autosubmit",
              autosubmit_target: "form",
              turbo_frame: "turbo-animals"
              } do %>
      <label for="per">Items per page:</label>
      <%= select_tag :per, options_for_select([15, 30, 50, 100, 150, 200], params[:per]), "data-action": "autosubmit#submit" %>
    
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-4">
        <% @items.each do |item| %>
          <div class="col">
            <input type="checkbox" aria-labelledby=<%= "items_ids_#{item.id}" %> name="animal_ids[<%= item.id %>]" id="items_ids_<%= item.id %>" value="0" class="check_box">
            <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
              <i class="fa-light fa-cart-shopping"></i>
            </button>
            <%= link_to "Checkout", add_item_to_checkout_path(item), class: "btn btn-primary", data: { turbo_frame: "remote_modal" }%>
            <%= render partial: "item_card", locals: { item: item } %>
          </div>
        <% end %>
      </div>
      <%= paginate @items %>
    <% end %>
  <% end %>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add to Checkout</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
    </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Add to Checkout</button>
      </div>
    </div>
  </div>
</div>
