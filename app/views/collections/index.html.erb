<p style="color: green"><%= notice %></p>

<div class="container my-5">
  <h1 class="fw-bold">Explore Collection Catalog</h1>

  <%= search_form_for @q, url: search_items_path, method: :post do |f| %>
    <div class="mb-2">
      <%= f.label :country_or_state_province_or_identifications_cont, "Search Items" %>
      <%= f.search_field :country_or_state_province_or_identifications_scientific_name_cont, placeholder: 'Country, State, Province, or Scientific Name', class: "form-control form-control-sm" %>
    </div>
    <div>
      <%# = f.label :catalog_number_eq, "Catalog Number" %>
      <%#= f.search_field :catalog_number_eq %>
    </div>
    <div>
      <%= f.submit "Search" %>
    </div>
  <% end %>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    <% @collections.each do |collection| %>
      <div class="col">
        <%= render partial: "collection_card", locals: { collection: collection } %>
      </div>
    <% end %>
  </div>

  <% if is_super_admin? %>
    <div class="mt-4 text-end">
      <%= link_to "New Collection", new_collection_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
