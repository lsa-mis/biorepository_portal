<% is_preview = params[:preview].present? %>
<%= render "layouts/announcement", is_preview: is_preview, location: "collections_index" %>
<h1 class="p-5 text-center">Explore Collection Catalog</h1>
<div class="row row-cols-1 row-cols-lg-2 g-5">
  <% @collections.each do |collection| %>
    <div class="col">
      <%= render partial: "collection_card", locals: { collection: collection } %>
    </div>
  <% end %>
</div>

<% if is_super_admin? %>
  <div class="mt-4 text-end">
    <%= link_to "New Collection", new_collection_path, class: "btn btn-success" %>
  </div>
<% end %>
