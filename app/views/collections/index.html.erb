<p style="color: green"><%= notice %></p>

<div class="container my-5">
  <h1 class="fw-bold">Explore Collection Catalog</h1>

  <div class="bg-white p-4 rounded-3 shadow-lg h-100 mb-5 mt-4" style="max-width: 600px;">
    <%= render "layouts/search_bar" %>
  </div>

  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    <% @collections.each do |collection| %>
      <div class="col">
        <%= render partial: "collection_card", locals: { collection: collection } %>
      </div>
    <% end %>
  </div>

  <% if is_super_admin? %>
    <div class="mt-4 text-end">
      <%= link_to "New Collection", new_collection_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
