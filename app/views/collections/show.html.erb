
<%= render @collection %>

<div>
  <% if is_collection_admin?(@collection) %>
    <%= link_to "Edit this collection", edit_collection_path(@collection) %> |
  <% end %>
  <%= link_to "Back to collections", collections_path %>

  <% if is_super_admin? %>
    <%= button_to "Destroy this collection", @collection, method: :delete %>
  <% end %>
</div>

<% if is_admin? %>
  <div>
    <%= render 'import' %>
  </div>
<% end %>
