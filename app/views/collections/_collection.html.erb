
<div class="d-flex justify-content-between align-items-center">
  <h1><%= collection.division %></h1>
  <div class="d-flex align-items-end flex-column gap-1 mt-2">
    <%= link_to "Back to Collections", collections_path, class: "link_to", data: { turbo_frame: "_top" }  %>
    <%= link_to "Items", collection_items_path(collection), class: "link_to", data: { turbo_frame: "_top" }  %>
    <% if policy(collection).edit? %>
      <%= link_to edit_collection_path(collection), class: "btn btn-primary h-50 mt-auto mb-auto" do%>
        Edit Collection <i class="bi bi-pencil-square"></i>
      <% end %>
    <% end %>
    <% if policy(collection).destroy? %>
      <%= button_to collection, method: :delete, class: "btn btn-danger h-50 mt-auto mb-auto", data: { turbo_confirm: "Are you sure you want to delete this collection?" } do %>
        Delete Collection <i class="bi bi-trash-fill"></i>
      <% end %>
    <% end %>
  </div>
</div>

<div id="<%= dom_id collection %>">
  </div>
    <% if collection.image.attached? %>
      <%= image_tag collection.image, alt: "image_#{collection.image.id}", class: "img-fluid img-thumbnail", style: "max-width: 30%" %>
    <% end %>
  </div>
  <div class="mt-3">
    <% if is_admin? %>
      <p>
        <strong>Admin Group: </strong> 
        <%= collection.admin_group %>
      </p>
    <% end %>

    <p>
      <strong>Description: </strong> 
      <%= collection.description %>
    </p>

    <p>
      <strong>Division page url:</strong>
      <%= collection.division_page_url %>
    </p>

    <p>
      <strong>Link to policies:</strong>
      <%= collection.link_to_policies %>
    </p>
  </div>

</div>
