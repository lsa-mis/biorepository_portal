<div class="position-fixed end-0 px-3 py-6" style="top: 80px; z-index: 1050;">
  <% flash.each do |type, message| %>
    <div data-controller="flash" class="alert alert-dismissible fade show <%= css_class_for_flash(type) %> shadow-lg" role="alert" style="min-width: 300px;">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>
