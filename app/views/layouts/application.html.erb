<!DOCTYPE html>
<html>
  <head>
    <title>BiorepositoryPortal</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css", rel: "stylesheet" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render partial: "layouts/navbar" %>
    <main class="container mx-auto px-4 px-sm-8 pb-5">
      <div id="flash">
        <%= render "layouts/flash" %>
      </div>
      <%#= render partial: "checkout/checkout" if @render_checkout %>
      <div>
        <%= yield %>
      </div>
    </main>
    <%= render partial: "layouts/footer" %>
  </body>
</html>
