<%- if devise_mapping.omniauthable? %>
  <h1>Log In or Create an Account</h1>
  <hr>
  <div class="d-flex pt-1 justify-content-center align-items-center gap-4">
    <div>
      <p class="text-dark fs-6 fw-bold">University of Michigan Community</p>
      <p>Students, Staff, Faculty & Alumni with a University of Michigan uniqname login below</p>
      <%= button_to "Sign in with U-M account", omniauth_authorize_path(resource_name, 'saml'), class: "btn btn-warning btn-sm m-2", data: { turbo: false } %>
    </div>
    <div class="vr text-dark"></div>
    
    <div>
      <p class="text-dark fs-6 fw-bold">University of Michigan Guests</p>
      <p>If you do not have University of Michigan login credentials</p>
        <%= link_to 'Create an Account', 'https://friend.weblogin.umich.edu/friend/', class: "btn btn-primary btn-sm m-2" %>
    </div>
  </div>
<% end %>
