<div class="container mt-4">
  <div class="row gy-4">

    <!-- Sidebar: Collection Info + Return Link -->
    <div class="col-12 col-lg-4 order-1 order-lg-1">
      <div class="bg-light p-4 rounded shadow-sm h-100">
        <h2 class="fw-bold mb-3"><%= @item.collection.division %> Collection</h2>
        <h3><%= @item.display_name %></h3>
        <%= turbo_frame_tag "checkout_item_row_#{@item.id}" do %>
          <%= render partial: "collections/preparation_for_checkout", locals: { item: @item } %>
        <% end %>

        <%= link_to safe_return_path(params[:return_to], collection_path(@item.collection)), class: "btn btn-outline-primary mt-3" do %>
          <i class="bi bi-arrow-left"></i> Back To Items
        <% end %>
      </div>
    </div>

    <!-- Main Content Area: Record Details + Identifications -->
    <div class="col-12 col-lg-4 order-2 order-lg-2">
      <div class="bg-light p-4 rounded shadow-sm mb-4">
        <h3 class="fw-bold mb-3">Record Details</h3>
        <%= render @item %>
      </div>
    </div>
    
    <div class="col-12 col-lg-4 order-3 order-lg-3">
      <div class="bg-light p-4 rounded shadow-sm mb-4">
        <h3 class="fw-bold mb-3">Identifications</h3>
        <%= render "identifications" %>
      </div>
    </div>

  </div>
</div>
