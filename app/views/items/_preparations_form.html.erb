<% @item.preparations.each do |prep| %>
  <% preparations_in_checkout = @checkout.requestables.exists?(preparation_id: prep.id) ? @checkout.requestables.find_by(preparation_id: prep.id).count : 0 %>
  <% available_preparations = show_count(prep, @max_number_of_preparations) - preparations_in_checkout %>
  <%= form_with(url: checkout_add_path, method: :post, data: { turbo_frame: "_top" }) do |form| %>
    <div class="card p-4 shadow-sm mb-3">
      <div class="card-body">
        <p><strong>Preparation Type:</strong> <%= prep.prep_type.presence || "N/A" %></p>
        <p><strong>Barcode:</strong> <%= prep.barcode.presence || "N/A" %></p>
        <p><strong>Description:</strong> <%= prep.description.presence || "N/A" %></p>
        <p><strong>Available:</strong> <%= available_preparations || "N/A" %></p>

        <div class="mt-3">
          <label class="form-label">Select Quantity</label>
          <%= form.hidden_field :id, value: prep.id %>
          <% if prep.count.to_i > 0 %>
            <%= form.select :count, options_for_select(1..available_preparations), class: "form-select w-auto" %>
          <% else %>
            <%= form.select :count, options_for_select([["None available", 0]]), class: "form-select w-auto", disabled: true %>
          <% end %>
        </div>

        <div class="mt-3">
          <%= form.submit "Add to Checkout", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
