<% @item.preparations.each do |prep| %>
  <% in_checkout, available = preparation_checkout_counts(prep, @checkout) %>

  <%= form_with(url: checkout_add_path, method: :post, data: { turbo_stream: true, turbo_frame: "_top" }) do |form| %>
    <div class="card p-4 shadow-sm mb-3">
      <div class="card-body">
        <p><strong>Preparation Type:</strong> <%= prep.prep_type.presence || "N/A" %></p>
        <% if prep.barcode.presence %>
          <p><strong>Barcode:</strong> <%= prep.barcode %></p>
        <% end %>
        <% if prep.description.presence %>
          <p><strong>Description:</strong> <%= prep.description %></p>
        <% end %>
        <p><strong>Available:</strong> <%= available %></p>

        <div class="mt-3">
          <label class="form-label">Select Quantity</label>
          <%= form.hidden_field :id, value: prep.id %>
          <% if prep.count.to_i > 0 && available > 0 %>
            <%= form.select :count, options_for_select(1..available), class: "form-select w-auto" %>
          <% else %>
            <%= form.select :count, options_for_select([["None available", 0]]), class: "form-select w-auto", disabled: true %>
          <% end %>
        </div>

        <div class="mt-3">
          <%= form.submit "Add to Checkout", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
