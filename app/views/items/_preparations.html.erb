<div class="d-flex overflow-auto gap-3 pb-2">
  <% @preparations.each_with_index do |prep, index| %>
    <div class="prep-detail d-none mt-4" id="prep-detail-<%= index %>">

      <button class="btn btn-outline-secondary flex-shrink-0 prep-btn" 
              data-prep-id="<%= index %>">
        <%= prep %>
      </button>
    </div>
  <% end %>
</div>

<% @preparations.each do |preparation| %>

  <div id="<%= dom_id preparation %>">
    <p>
      <strong>Prep type:</strong>
      <%= preparation.prep_type %>
    </p>

    <p>
      <strong>Count:</strong>
      <%= preparation.count %>
    </p>

    <p>
      <strong>Barcode:</strong>
      <%= preparation.barcode %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= preparation.description %>
    </p>

    <p>
      <strong>Item:</strong>
      <%= preparation.item_id %>
    </p>

  </div>

    <p>
      <strong>Preparation type:</strong>
      <%= preparation.prep_type %>
    </p>

<% end %>
