<div id="loan_answer_<%= answer.id %>" class="border rounded p-3 mb-3">
  <p>
    <strong><%= answer.loan_question.question %></strong>
    <% if answer.loan_question.required? %>
      <span class="text-danger">*</span>
    <% end %>
  </p>
  <p>
    <% plain_answer = answer.answer.to_plain_text.strip.presence %>
    <% if answer.loan_question.required? %>
      <% if plain_answer %>
        <%= plain_answer %>
      <% else %>
        <span class="text-danger">Warning: This question is required but not answered.</span>
      <% end %>
    <% else %>
      <%= plain_answer || "No answer provided" %>
    <% end %>
  </p>

  <%= link_to "Edit",
              edit_loan_answer_path(answer.loan_question, format: :turbo_stream),
              data: {
                turbo_frame: "edit_loan_answer_modal_content_frame",
                bs_toggle: "modal",
                bs_target: "#editLoanAnswerModal"
              },
              class: "btn btn-sm btn-outline-primary" %>
</div>
