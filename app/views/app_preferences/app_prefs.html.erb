<div class="mx-auto w-full">
  <% if (announcement = Announcement.find_by(location: "app_preferences")) && announcement.displayed? %>
    <div class="text-start mt-5 mb-5">
      <%= announcement.content.to_s.html_safe %>
    </div>
  <% end %>
  <% is_preview = params[:preview].present? %>
  <% if is_preview %>
    <div class="d-flex justify-content-end mt-3">
      <%= link_to "Back to Announcement", announcements_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %> 
  <h1>Application Preferences</h1>
  <%= render "app_preferences/all_preferences" %>
</div>
