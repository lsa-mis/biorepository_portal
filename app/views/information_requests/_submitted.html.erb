<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Submitted At</th>
        <th>Send To</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if @information_requests.any? %>
        <% @information_requests.each do |request| %>
          <tr>
            <td><%= l(request.created_at, format: :short) %></td>
            <td><%= request.send_to %></td>
            <td>
              <%= link_to "Show", information_request_show_modal_path(request), 
                data: {
                  turbo_frame: "modal_content_frame",
                  bs_toggle: "modal",
                  bs_target: "#infoRequestModal"
                },
                class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="2" class="text-center text-muted">
            No information requests found.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render "layouts/remote_modal", 
            id: "infoRequestModal", 
            title: "Information Request Details" %>
