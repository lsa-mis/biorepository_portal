<div class="p-3">
  <h5 class="fw-bold mb-3">Submitted Information Request</h5>

  <div class="mb-3">
    <label class="form-label fw-semibold">Submitted At:</label>
    <p class="form-control-plaintext"><%= l(information_request.created_at, format: :long) %></p>
  </div>

  <div class="mb-3">
    <label class="form-label fw-semibold">Sent To:</label>
    <% begin %>
      <% emails = JSON.parse(information_request.send_to) rescue Array(information_request.send_to) %>
      <% if emails.any? %>
        <div class="d-flex flex-wrap gap-2">
          <% emails.each do |email| %>
            <span class="badge bg-primary"><%= email %></span>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">No recipients</p>
      <% end %>
    <% rescue => e %>
      <p class="text-danger">Invalid format: <%= information_request.send_to %></p>
    <% end %>
  </div>

  <div class="mb-3">
    <label class="form-label fw-semibold">Checkout Items:</label>
    <% begin %>
      <% items = information_request.checkout_items.split(" | ") %>
      <% if items.any? %>
        <ul class="list-group">
          <% items.each do |item| %>
            <li class="list-group-item"><%= item %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="text-muted">No checkout items included</p>
      <% end %>
    <% rescue => e %>
      <p class="text-danger">Invalid checkout items format</p>
    <% end %>
  </div>

  <div class="mb-3">
    <label class="form-label fw-semibold">Message:</label>
    <div class="border rounded p-3 bg-light">
      <%= information_request.question.body.to_s.html_safe %>
    </div>
  </div>
</div>
